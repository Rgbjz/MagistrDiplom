{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "strict": false,
    "noImplicitAny": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
